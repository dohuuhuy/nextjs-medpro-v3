{
  "env": {
    "development": {
      "presets": ["next/babel"],
      "plugins": [
        [
          "module-resolver",
          {
            "root": ["./"],
            "alias": {
              "@components": "./components",
              "@styles": "./public/assets/styles",
              "@template": "./templates",
              "@public": "./public"
            }
          }
        ]
      ]
    },
    "production": {
      "presets": ["next/babel"],
      "plugins": [
        [
          "module-resolver",
          {
            "root": ["./"],
            "alias": {
              "@components": "./src/components",
              "@styles": "./public/assets/styles",
              "@template": "./src/template"
            }
          }
        ]
      ]
    }
  }
}
