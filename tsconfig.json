{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["dom", "es2017", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@componentsTest/*": [
        "./test/components/*"
      ],
      "@componentStore/*": [
        "./store/componentStore/*"
      ],
      "@actionStore/*": [
        "./store/actionStore/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@templates/*": [
        "./templates/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "assets/js/wechat.js",
    "json máº«u/bvtest.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js"
  ]
}
