{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["dom", "es2017"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@components/*": ["./src/components/*"],
      "@componentStore/*": ["./src/store/componentStore/*"],
      "@actionStore/*": ["./src/store/actionStore/*"],
      "@store/*": ["./src/store/*"],
      "@templates/*": ["./templates/*"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", ".next", "out", "next.config.js"]
}
